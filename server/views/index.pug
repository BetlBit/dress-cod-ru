            h2= title
            .wrapper-header
                  header.header
                        .wrapper-logo
                              .logo
                        nav.topnav
                              a.topnav-link(href='#about') &Ocy; &ncy;&acy;&scy;
                              a.topnav-link(href='#galary') &Gcy;&acy;&lcy;&iecy;&rcy;&iecy;&yacy;
