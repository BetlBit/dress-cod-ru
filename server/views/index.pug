            .sidebar.close
                  
                        
                  ul.nav-links                                   
                        li
                              .iocn-link
                                    a(class="sidebar-logo", href="#")
                                          i.bx.bx-collection
                                                img(class="sidebar-logo", src="image/menu.png", alt="")
                                          span.link_name Category
                                    i.bx.bxs-chevron-down.arrow
                              ul.sub-menu
                                    li
                                          a.link_name(href='#') Category
                                    li
                                           a(href='t-shirt') T-SHIRTS
                                    li
                                          a(href='trousers') TROUSERS
                                    li
                                          a(href='jacket') JACKETS
                                    li
                                          a(href='short') SHORTS
                                    li
                                          a(href='sweaters') SWEATERS
                                    li
                                          a(href='shirts') SHIRTS
                                    li
                                          a(href='hoodies') HOODIES
            div.items
                  each pr in products 
                        div.item
                              img(class='img', src='image/'+pr.image)
                              div.name #{pr.name} 
                              div.cat #{pr.category}
                              div.brand #{pr.brand}
                              div.price #{pr.price} ₽     
                              button.buy(data-id= + pr.id) Купить 
